<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/text_produto"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="PRODUTO:"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_nome"
        app:layout_constraintTop_toBottomOf="@+id/text_nome" />

    <EditText
        android:id="@+id/text_codigo"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CODIGO:"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_produto"
        app:layout_constraintTop_toBottomOf="@+id/text_produto"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/text_nome"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="NOME:"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_item_nome"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="239dp"
        android:layout_height="41dp"
        android:text="TextView"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/text_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toEndOf="@+id/text_nome"
        app:layout_constraintTop_toTopOf="@+id/text_nome"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_item_produto"
        android:layout_width="239dp"
        android:layout_height="41dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/text_produto"
        app:layout_constraintEnd_toEndOf="@+id/id_item_nome"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toEndOf="@+id/text_produto"
        app:layout_constraintTop_toTopOf="@+id/text_produto"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_item_codigo"
        android:layout_width="239dp"
        android:layout_height="41dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/text_codigo"
        app:layout_constraintEnd_toEndOf="@+id/id_item_produto"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toEndOf="@+id/text_codigo"
        app:layout_constraintTop_toTopOf="@+id/text_codigo"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>